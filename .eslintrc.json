{
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "jest":   true
    },   
    "extends": ["airbnb"],
    "rules": {
			"react/jsx-filename-extension": [
      	"error",
      	{
        	"extensions": [".js", ".jsx"]
      	}
    	],
			"react/react-in-jsx-scope": "off",
			"semi": [1, "never"],
			"react/jsx-closing-tag-location": 0,
  		"react/jsx-curly-brace-presence": 0
    }
}
